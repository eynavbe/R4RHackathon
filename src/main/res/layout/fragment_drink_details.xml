<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".drinkDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="כמות המים ששתית היום:"
            android:textSize="30sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="170 ml"
            android:background="@color/purple_500"
            android:textSize="27sp"
            android:textColor="@color/black"
            android:layout_marginStart="8dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="אתה צריך לשתות לפחות עוד"
            android:textSize="24sp"
            android:layout_marginStart="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="820 ml"
            android:textSize="24sp"
            android:background="@color/white"
            android:textColor="@color/black"
            android:layout_marginStart="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="לא לשכוח לשתות כל יום בין 8 ל 12 כוסות מים."
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="נא להקפיד לשתות בבקבוק החכם שניתן לכם על מנת שהטיפול יהיה מיטבי."
            android:textColor="@color/purple_500"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="אל תדאגו נתזכר אתכם :)"
            android:textSize="17dp"
            android:gravity="center"/>



    </LinearLayout>

</FrameLayout>